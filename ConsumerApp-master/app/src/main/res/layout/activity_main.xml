<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.swinblockchain.consumerapplication.MainActivity">

    <Button
        android:id="@+id/scanProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="scanProduct"
        android:text="@string/scanProduct"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

    <ImageView
        android:id="@+id/ackImage"
        android:layout_width="39dp"
        android:layout_height="40dp"
        android:onClick="displayAck"
        app:srcCompat="@mipmap/settings"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/scanProduct"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.953"
        app:layout_constraintVertical_bias="0.083" />
</android.support.constraint.ConstraintLayout>
